    <rules>
        <fullName>Product Detail%3A Default</fullName>
        <actions>
            <name>Product_Detail_record_type_Default</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>Update record type to default when product domain is 1,2,3 and 4 (product family is not Foreign currency, Interest rate, Life Insurance, Non-life Insurance)</description>
        <formula>OR( CONTAINS( LOWER(Product_Information__r.Product_Domain__c)  ,&quot;transactional&quot;),      CONTAINS(LOWER(Product_Information__r.Product_Domain__c) ,&quot;deposit&quot;),      CONTAINS(LOWER(Product_Information__r.Product_Domain__c) ,&quot;funding&quot;), AND(CONTAINS(LOWER(Product_Information__r.Product_Domain__c) ,&quot;risk&quot;),      LOWER(Product_Family__c)  &lt;&gt; &quot;foreign currency&quot;,           LOWER(Product_Family__c) &lt;&gt; &quot;interest rate&quot;,           LOWER(Product_Family__c) &lt;&gt; &quot;non-life insurance&quot;,          LOWER(Product_Family__c) &lt;&gt; &quot;non life insurance&quot;,          LOWER(Product_Family__c) &lt;&gt; &quot;life insurance&quot;))</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Product Detail%3A Foreign</fullName>
        <actions>
            <name>Product_Detail_record_type_Foreign</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>Update record type to default when product domain is domain 4 and product family = Foreign currency, Interest rate</description>
        <formula>AND( CONTAINS( LOWER(Product_Information__r.Product_Domain__c) ,&quot;risk&quot;),  OR( LOWER(Product_Family__c) = &quot;foreign currency&quot;,      LOWER(Product_Family__c) = &quot;interest rate&quot;) )</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Product Detail%3A Insurance</fullName>
        <actions>
            <name>Product_Detail_record_type_Insurance</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>Update record type to default when product domain is domain 4 and product family = Life Insurance, Non-life Insurance.</description>
        <formula>AND( CONTAINS( LOWER(Product_Information__r.Product_Domain__c) ,&quot;risk&quot;), OR( LOWER(Product_Family__c) = &quot;life insurance&quot;, LOWER(Product_Family__c) = &quot;non-life insurance&quot;,LOWER(Product_Family__c) = &quot;non life insurance&quot;) )</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Update Is Credit Product</fullName>
        <actions>
            <name>Update_IsCredit_Field</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <formula>IF(OR(CONTAINS(Product_Information__r.Product_Domain__c, &quot;Transactional&quot;) , CONTAINS(Product_Information__r.Product_Domain__c, &quot;Funding&quot;), CONTAINS(Product_Information__r.Product_Domain__c,&quot;Risk&quot;)), True, False)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
