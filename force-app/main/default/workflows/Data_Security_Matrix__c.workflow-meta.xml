<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <fieldUpdates>
        <fullName>Update_Data_Matrix_Key</fullName>
        <description>Profile_Name__c + Section_Name__c</description>
        <field>Data_Matrix_Key__c</field>
        <formula>Profile_Name__c  +  TEXT( Section_Name__c )</formula>
        <name>Update Data Matrix Key</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Data Security Matrix%3A Update Data Matrix Key when change profile name or section name</fullName>
        <actions>
            <name>Update_Data_Matrix_Key</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>Update Data Matrix Key when change profile name or section name</description>
        <formula>OR( ISNEW() , OR( ISCHANGED( Profile_Name__c ) , ISCHANGED( Section_Name__c ) ) )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>
