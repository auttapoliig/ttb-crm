<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Send_Email_after_salseforce_request_has_been_updated_status</fullName>
        <description>Send Email after salseforce request has been updated status</description>
        <protected>false</protected>
        <recipients>
            <field>Email_Address__c</field>
            <type>email</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Defect_Management/SF_Requests_has_been_update_status</template>
    </alerts>
    <alerts>
        <fullName>Send_email</fullName>
        <description>Send email</description>
        <protected>false</protected>
        <recipients>
            <field>Email_Address__c</field>
            <type>email</type>
        </recipients>
        <recipients>
            <field>Email_CC_Address__c</field>
            <type>email</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Defect_Management/New_SF_Requests</template>
    </alerts>
    <alerts>
        <fullName>Send_email_to_Somjit_R</fullName>
        <ccEmails>sjr@ii.co.th</ccEmails>
        <description>Send email to Somjit R.</description>
        <protected>false</protected>
        <recipients>
            <recipient>iiqasupport@tmbbank.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Defect_Management/New_SF_Requests</template>
    </alerts>
    <fieldUpdates>
        <fullName>Update_Email_Address</fullName>
        <field>Email_Address__c</field>
        <formula>look_up_email__c</formula>
        <name>Update Email</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>true</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Update_record_type</fullName>
        <field>RecordTypeId</field>
        <lookupValue>Closed_SF_Request</lookupValue>
        <lookupValueType>RecordType</lookupValueType>
        <name>Update record type</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>LookupValue</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>update_email</fullName>
        <field>Email_Address__c</field>
        <formula>look_up_email__c</formula>
        <name>update email</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>true</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>update_email_cc</fullName>
        <field>Email_CC_Address__c</field>
        <formula>look_up_email_cc__c</formula>
        <name>update email cc</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>true</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>SF-Request %3A Alert to assignee when salesforce request has been updated status</fullName>
        <actions>
            <name>Send_Email_after_salseforce_request_has_been_updated_status</name>
            <type>Alert</type>
        </actions>
        <actions>
            <name>Update_Email_Address</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>ISCHANGED(Assigned_to__c)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>SF-Request %3A Alert to assignee when the new case create</fullName>
        <actions>
            <name>Send_email</name>
            <type>Alert</type>
        </actions>
        <actions>
            <name>update_email</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>update_email_cc</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Salesforce_Requests__c.Status__c</field>
            <operation>equals</operation>
            <value>New,Open</value>
        </criteriaItems>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>SF-Request %3A Priority %3D High</fullName>
        <actions>
            <name>Send_email_to_Somjit_R</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Salesforce_Requests__c.Priority__c</field>
            <operation>equals</operation>
            <value>High</value>
        </criteriaItems>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>SF-Request %3A Update record type when status change to Closed</fullName>
        <actions>
            <name>Update_record_type</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Salesforce_Requests__c.Status__c</field>
            <operation>equals</operation>
            <value>Closed</value>
        </criteriaItems>
        <description>SF-Request : Update record type when status change to Closed</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
