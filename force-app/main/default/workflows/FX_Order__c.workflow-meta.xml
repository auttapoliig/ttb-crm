    <rules>
        <fullName>FXO Stamp Segment Role Zone From FXO Owner</fullName>
        <actions>
            <name>Stamp_FXO_Owner_Role</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Stamp_FXO_Owner_Segment</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Stamp_FXO_Owner_Zone</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>FX_Order__c.Name</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <description>Stamp Segment, Role, Zone from FX Order Owner</description>
        <triggerType>onCreateOnly</triggerType>
