    <rules>
        <fullName>FXO Update FX Order Record Type</fullName>
        <actions>
            <name>FXO_Update_Record_type_to_completed</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>FX_Order__c.FXO_OrderStatus__c</field>
            <operation>equals</operation>
            <value>InProgress,Done,Acknowledge,Cancelled,Expired,Not Allocated</value>
        </criteriaItems>
        <description>Update Record Type when Status = InProgress,Done,Acknowledge,Cancelled, Expired, Not Allocated</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
