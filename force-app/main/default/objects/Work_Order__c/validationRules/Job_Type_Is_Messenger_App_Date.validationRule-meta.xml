<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Job_Type_Is_Messenger_App_Date</fullName>
    <active>true</active>
    <description>job type = messenger, appoint date cannot be blank</description>
    <errorConditionFormula>IF(ISPICKVAL(Job_Type__c,&quot;Messenger&quot;)
&amp;&amp; ISBLANK( TEXT(Appoint_Date_TIme__c) )  
, TRUE
, FALSE
)</errorConditionFormula>
    <errorDisplayField>Appoint_Date_TIme__c</errorDisplayField>
    <errorMessage>Job Type is Messenger, Appoint Date/Time can not be blank</errorMessage>
</ValidationRule>
