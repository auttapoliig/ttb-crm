<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Prefer_Phone_Is_Fax</fullName>
    <active>true</active>
    <description>If Prefer Phone = Fax, Field “Other/Fax Phone” cannot be blank.</description>
    <errorConditionFormula>IF(ISPICKVAL(Prefer_Phone__c, &quot;Fax&quot;)
&amp;&amp; ISBLANK(Other_Fax_Phone__c)
, TRUE
, FALSE
)</errorConditionFormula>
    <errorDisplayField>Other_Fax_Phone__c</errorDisplayField>
    <errorMessage>Prefer Phone is Fax, Other/Fax Phone cannot be blank.</errorMessage>
</ValidationRule>
