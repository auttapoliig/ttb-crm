<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Uncontact_Reason</fullName>
    <active>true</active>
    <description>if contact status = uncontact, uncontact reason can not be blank</description>
    <errorConditionFormula>if( ISPICKVAL(Contact_Status__c,&quot;Uncontact&quot;) 
			&amp;&amp; ISBLANK(TEXT(Uncontact_Reason__c))
		,TRUE
		,FALSE)</errorConditionFormula>
    <errorDisplayField>Uncontact_Reason__c</errorDisplayField>
    <errorMessage>Please Enter Uncontact Reason</errorMessage>
</ValidationRule>
