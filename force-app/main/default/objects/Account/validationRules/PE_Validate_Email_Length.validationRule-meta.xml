<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PE_Validate_Email_Length</fullName>
    <active>true</active>
    <description>Check Email length not greater than 70</description>
    <errorConditionFormula>AND(NOT(CONTAINS(RecordType.Name, &apos;Retail&apos;)), 
Len( Email_Address_PE__c ) &gt; 70 ,RecordType.Name &lt;&gt; &quot;Inactive Customer&quot;)</errorConditionFormula>
    <errorDisplayField>Email_Address_PE__c</errorDisplayField>
    <errorMessage>Email is too large: length 70 digits</errorMessage>
</ValidationRule>
