<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PE_Validate_Fax_Length</fullName>
    <active>true</active>
    <description>Validate Fax length not greater than 18 digits</description>
    <errorConditionFormula>if(AND(RecordType.Name != &apos;Existing Customer&apos;,RecordType.Name !=&apos;Inactive Customer&apos;),LEN(Fax) &gt; 18,false)</errorConditionFormula>
    <errorDisplayField>Fax</errorDisplayField>
    <errorMessage>Fax number is too large: length 18 digits</errorMessage>
</ValidationRule>
