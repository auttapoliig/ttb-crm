<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>RTL_Validate_Contact_Person_Number_1</fullName>
    <active>true</active>
    <description>Contact Person Number 1 must be between 9 and 18 digits</description>
    <errorConditionFormula>AND(CONTAINS($RecordType.Name,&quot;Retail&quot;) ,NOT(ISBLANK(RTL_Contact_Person_Number_1__c)),OR(LEN(RTL_Contact_Person_Number_1__c) &lt; 9,LEN(RTL_Contact_Person_Number_1__c) &gt; 18,NOT(REGEX( RTL_Contact_Person_Number_1__c , &quot;[\\d]*&quot;))))</errorConditionFormula>
    <errorDisplayField>RTL_Contact_Person_Number_1__c</errorDisplayField>
    <errorMessage>Contact Person Number 1 must be between 9 and 18 digits</errorMessage>
</ValidationRule>
