<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>RTL_Citizen_Id_Blank</fullName>
    <active>true</active>
    <errorConditionFormula>AND((!ISBLANK(TEXT( RTL_ID_Type__c ))),
ISBLANK( RTL_Citizen_Id__c ))</errorConditionFormula>
    <errorDisplayField>RTL_Citizen_Id__c</errorDisplayField>
    <errorMessage>ID Number cannot be blank when ID Type is provided.</errorMessage>
</ValidationRule>
