<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Validate_Appointed_Date_Time</fullName>
    <active>true</active>
    <errorConditionFormula>OR( DATEVALUE(Appointed_Date_Time__c) &gt; (TODAY() +(365.2425*50)) , 

DATEVALUE(Appointed_Date_Time__c) &lt; (TODAY() - (365.2425*50 )))</errorConditionFormula>
    <errorDisplayField>Appointed_Date_Time__c</errorDisplayField>
    <errorMessage>Invalid Date and Time</errorMessage>
</ValidationRule>
