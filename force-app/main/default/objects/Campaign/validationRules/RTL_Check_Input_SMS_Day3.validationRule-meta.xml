<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>RTL_Check_Input_SMS_Day3</fullName>
    <active>true</active>
    <description>Preventing incorrect input SMS Day-3</description>
    <errorConditionFormula>OR( RTL_SMS_Day_3__c &gt; (TODAY() +(365.2425*50)) , 

RTL_SMS_Day_3__c  &lt; (TODAY() - (365.2425*50 )))</errorConditionFormula>
    <errorDisplayField>RTL_SMS_Day_3__c</errorDisplayField>
    <errorMessage>Invalid SMS Day-3</errorMessage>
</ValidationRule>
