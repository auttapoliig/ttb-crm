<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>RTL_Check_Input_Call_Startdate</fullName>
    <active>true</active>
    <description>Preventing incorrect input call startdate</description>
    <errorConditionFormula>OR( RTL_Call_Start_Date__c &gt; (TODAY() +(365.2425*50)) , 

 RTL_Call_Start_Date__c  &lt; (TODAY() - (365.2425*50 )))</errorConditionFormula>
    <errorDisplayField>RTL_Call_Start_Date__c</errorDisplayField>
    <errorMessage>Invalid Call Startdate</errorMessage>
</ValidationRule>
