<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>RTL_Validate_Due_Date</fullName>
    <active>true</active>
    <errorConditionFormula>OR( ActivityDate &gt; (TODAY() +(365.2425*50)) , 

ActivityDate &lt; (TODAY() - (365.2425*50 )))</errorConditionFormula>
    <errorDisplayField>ActivityDate</errorDisplayField>
    <errorMessage>Invalid Date</errorMessage>
</ValidationRule>
