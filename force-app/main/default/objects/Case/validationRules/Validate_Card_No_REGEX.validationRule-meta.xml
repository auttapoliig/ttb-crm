<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Validate_Card_No_REGEX</fullName>
    <active>true</active>
    <description>validate Card No1 have to be 16 digit</description>
    <errorConditionFormula>IF(AND
(NOT(ISBLANK(Card_No_Full__c)),NOT(REGEX(Card_No_Full__c,&quot;^[0-9]{16}&quot;))
)
,true,false)</errorConditionFormula>
    <errorDisplayField>Card_No_Temp__c</errorDisplayField>
    <errorMessage>have to fill 16 digit</errorMessage>
</ValidationRule>
