<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Validate_Product_Type_2_Is_Null</fullName>
    <active>true</active>
    <description>When product number 2 has value,Product type 2 must not be null.</description>
    <errorConditionFormula>AND(ISBLANK(TEXT(Product_Type_2__c)),(Product_Number_2__c!=null ))</errorConditionFormula>
    <errorDisplayField>Product_Type_2__c</errorDisplayField>
    <errorMessage>Please input value</errorMessage>
</ValidationRule>
