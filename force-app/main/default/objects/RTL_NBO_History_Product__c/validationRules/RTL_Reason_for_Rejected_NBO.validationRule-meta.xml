<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>RTL_Reason_for_Rejected_NBO</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(RTL_Status__c,&quot;Rejected&quot;), ISPICKVAL(RTL_Reject_Reason__c,&quot;&quot;))</errorConditionFormula>
    <errorMessage>Reject reason is required when NBO Product is rejected</errorMessage>
</ValidationRule>
