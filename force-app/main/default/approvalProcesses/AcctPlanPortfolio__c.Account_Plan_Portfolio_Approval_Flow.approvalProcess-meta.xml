<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>SumOfExpectedNIByAcctPlan__c</field>
        <field>SumOfPerformance__c</field>
        <field>SumOfTargetNIByRM__c</field>
        <field>SumOfWallet__c</field>
        <field>TargetNI__c</field>
        <field>Year__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Notification_Account_Plan_Portfolio_has_been_approved</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Portfolio_Unlock</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Status_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>adhoc</type>
            </approver>
        </assignedApprover>
        <label>Step 1</label>
        <name>Step_1</name>
        <rejectionActions>
            <action>
                <name>Notification_Account_Plan_Portfolio_has_been_rejected</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Portfolio_Unlock</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Status_Rejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <emailTemplate>Account_Plan_Email_Template/Portfolio_Approval_Assignment_Template</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>AcctPlanPortfolio__c.Owner</field>
            <operation>notEqual</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Portfolio_Lock</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Owner_Manager_Email</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_Waiting_for_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Account Plan Portfolio Approval Flow</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Notification_Account_Plan_Portfolio_has_been_recalled</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Portfolio_Unlock</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_In_Progress</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
