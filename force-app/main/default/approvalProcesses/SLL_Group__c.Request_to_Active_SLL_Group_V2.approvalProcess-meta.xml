<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <submitter>CCBO</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>CRBO</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Product_Team</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Primary_Customer__c</field>
        <field>PAM__c</field>
        <field>Remark__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Update_Approval_Status_PAM1_Active</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Approver1__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Approver 1</label>
        <name>Approver_1</name>
    </approvalStep>
    <emailTemplate>SLL_Group/Request_to_Active_SLL_Group</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>SLL_Group__c.RecordType</field>
            <operation>equals</operation>
            <value>Draft</value>
        </criteriaItems>
        <criteriaItems>
            <field>SLL_Group__c.Approval_Status__c</field>
            <operation>equals</operation>
            <value>Pending Approval - Active</value>
        </criteriaItems>
        <criteriaItems>
            <field>SLL_Group__c.Is_Active__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Final_Approved_request_to_Active_SLL_Group</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Approval_Status_to_Approve_Active</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Field_IsActive_to_be_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Field_Last_Approve_Date_Active</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Record_Type_to_Available</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Final_Rejected_request_to_Active_SLL_Group</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Approval_Status_to_Reject_Active</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Request to Active SLL Group V2</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Recall_request_to_Active_SLL_Group</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Field_Approval_Status_Recall</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
