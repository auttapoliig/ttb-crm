<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Formula_KYC_Data_type__c</field>
        <field>KYC_Risk_Level__c</field>
        <field>KYC_Number__c</field>
        <field>Description</field>
        <field>CaseNumber</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>KYC_Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Assign to Approver1</label>
        <name>Assign_to_Approver1</name>
    </approvalStep>
    <emailTemplate>KYC_Review_Email_Template/KYC_Review_For_approve</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>And(Record_Type_Name__c=&apos;KYC System&apos;, KYC_Data_type__c=&apos;N&apos;, OR(KYC_Risk_Level__c=&apos;2&apos;,AND(OR(KYC_Risk_Level__c=&apos;3&apos;,KYC_Risk_Level__c=&apos;4&apos;),NOT(OR(Owner:User.Profile.Name=&apos;TMB BDM Profile&apos;,Owner:User.Profile.Name=&apos;TMB ABDM Profile&apos;,Owner:User.Profile.Name=&apos;TMB SEPM Profile&apos;)))))</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Notify_requester_case_approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_KYC_Approval_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_KYC_Case_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_KYC_Issue_Cause</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_KYC_Resolution</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Notify_requester_case_rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_KYC_Approval_Status_Reject</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Case_Status_InProgress</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_KYC_Approval_Status_Inprogress</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Owner_Manager_Email</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Case KYC Approval1</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>2</processOrder>
    <recallActions>
        <action>
            <name>Notify_approver_case_recalled</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_KYC_Approval_Status_New</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
