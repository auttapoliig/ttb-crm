<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <submitter>AL_WS_Loan_Disbursement_SettlementTL</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>CCBO</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <entryCriteria>
            <booleanFilter>1 OR 2 OR 3</booleanFilter>
            <criteriaItems>
                <field>E_Client_Suitability__c.CS_Stamped_Customer_Segment__c</field>
                <operation>equals</operation>
                <value>CB</value>
            </criteriaItems>
            <criteriaItems>
                <field>E_Client_Suitability__c.CS_Stamped_Customer_Segment__c</field>
                <operation>equals</operation>
                <value>MB</value>
            </criteriaItems>
            <criteriaItems>
                <field>E_Client_Suitability__c.CS_Stamped_Customer_Segment__c</field>
                <operation>equals</operation>
                <value>FI</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Auto Approved FormA</label>
        <name>Auto_Approved_FormA</name>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND( CS_RM__r.Id = $User.Id, 
OR (( CS_Stamped_Customer_Segment__c = &quot;SE&quot;), 
(CS_Stamped_Customer_Segment__c = &quot;BB&quot;)), 
ISPICKVAL( CS_Customer_Survey_A__r.Status__c , &quot;Ready for Review&quot;), 
OR (ISPICKVAL( CS_Status__c , &quot;Reviewing&quot;), ISPICKVAL( CS_Status__c , &quot;RM TH Rejected&quot;) ) 
)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Auto_stamp_approver</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Auto_update_record_type_to_pending_sales</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Auto_Update_Status_to_Pending_Sales</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Stamp_RM_TH_Approved_Date_Time</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>CS_Stamp_RM_TH</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Initial_auto_Pending_Sales</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>RM_Stamp_Submit_By</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>RM_Stamp_Submit_Date</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>FormA segment SE and BB approval</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>2</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
