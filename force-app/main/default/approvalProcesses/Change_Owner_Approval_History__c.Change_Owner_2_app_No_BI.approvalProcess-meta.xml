<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <submitter>CCBO</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Product_Team</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>RecordType</field>
        <field>Account__c</field>
        <field>Current_Owner__c</field>
        <field>Approver1__c</field>
        <field>Approver2__c</field>
        <field>Current_Approver_Name__c</field>
        <field>Step_Wait_Duration_Days__c</field>
        <field>To_Be_Sub_Segment__c</field>
        <field>Change_Owner_Remark__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Clear_Escalated_Flag</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Stamp_Next_Step_Start_Wait_Time</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Current_Approver_2_Emp_Id</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Current_Approver_2_Name</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Current_Approver_2_Team</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Status_to_1st_Approver_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Approver1__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Approver 1</label>
        <name>Approver_1</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Approver2__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Approver 2</label>
        <name>Approver_2</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Change owner for 2 approvers (no BI)</description>
    <emailTemplate>Change_Account_Owner_Email_Template/Account_Request_for_approval_for_Existing_Account_English</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND(
RecordType.Name = &quot;Change Owner Existing Customer&quot;,
NOT(ISBLANK( Approver1__c )),
NOT(ISBLANK( Approver2__c )),
BI_Flag__c = FALSE
)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Clear_Escalated_Flag</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_to_Final_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Clear_Escalated_Flag</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Request_Change_Owner_Qualified_Prospect_Alert_the_Requester_request_is_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Status_to_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Stamp_Approval_Process_Start_Time</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Stamp_Next_Step_Start_Wait_Time</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Current_Appprover_1_Team</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Current_Approver_1_Emp_Id</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Current_Approver_1_Name</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_to_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Change Owner -  2 app - No BI</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>6</processOrder>
    <recallActions>
        <action>
            <name>Clear_Escalated_Flag</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Request_Change_Owner_Qualified_Prospect_Alert_Request_the_request_is_recalled</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Status_to_Recalled</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
