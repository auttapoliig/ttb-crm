<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>RTL_Campaign_Type__c</field>
        <field>RTL_Campaign_Objective__c</field>
        <field>StartDate</field>
        <field>EndDate</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>28376@tmbbank.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>51077@tmbbank.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Assigned to selected users</description>
        <label>Assign to approval pool</label>
        <name>Assign_to_approval_pool</name>
    </approvalStep>
    <description>RTL Campaign approval process for Exclusive Campaign</description>
    <emailTemplate>RTL_Campaign_Template/RTL_Campaign_Request_for_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Campaign.RecordType</field>
            <operation>equals</operation>
            <value>Master Campaign</value>
        </criteriaItems>
        <criteriaItems>
            <field>Campaign.ContainsChild__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Campaign.RTL_Campaign_Type__c</field>
            <operation>equals</operation>
            <value>Exclusive</value>
        </criteriaItems>
        <criteriaItems>
            <field>Campaign.Approvedflag__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Alert_to_submitter_when_campaign_approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>RTL_Update_Approved_Flag</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Alert_to_submitter_when_campaign_rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>RTL_Update_Status_to_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>RTL_Update_Status_to_Submitted</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>RTL Campaign Approval - Exclusive</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>RTL_Update_status_to_plan</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
