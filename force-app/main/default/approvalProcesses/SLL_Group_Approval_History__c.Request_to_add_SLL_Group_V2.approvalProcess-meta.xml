<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>SLL_Group_Name__c</field>
        <field>Requester__c</field>
        <field>SLL_Group_Status__c</field>
        <field>Request_Type__c</field>
        <field>Customer__c</field>
        <field>Request_Date__c</field>
        <field>Reason__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Update_Status_to_Approver1_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Approver1__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Approver 1</label>
        <name>Approver_1</name>
    </approvalStep>
    <emailTemplate>SLL_Group/Request_Approval_to_add_SLL_Group</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>SLL_Group_Approval_History__c.Approval_Status_Pending__c</field>
            <operation>notEqual</operation>
            <value>Approved,Rejected,Approver1 Approved</value>
        </criteriaItems>
        <criteriaItems>
            <field>SLL_Group_Approval_History__c.Request_Type__c</field>
            <operation>equals</operation>
            <value>Request to add</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Final_Approved_to_add_SLL_Group</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Approved_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Reject_Request_to_add_SLL_Group</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Status_to_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Request to add SLL Group V2</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Recall_Request_to_add_SLL_Group</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Status_to_Recalled</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
